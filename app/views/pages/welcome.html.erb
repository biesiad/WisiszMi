<div class="welcome">
  <a class="app_info_page" href="http://www.facebook.com/apps/application.php?id=<%= Facebook::APP_ID %>&sk=info">
    <%= image_tag "logo_text.png" %>
  </a>
  <br/>
  <br/>
  <br/>
  <%= link_to "Start using application", root_url, :id => :login, :class => "button" %>
</div>

<script>
    window.onload = function () {
        FB.getLoginStatus(onGetLoginStatus);

        function onGetLoginStatus(response) {
            if (response.session) { 
                window.location = "<%= root_url %>"; 
            } else {
                FB.login(onLogin);
            }
        };

        function onLogin(response) {
            if (response.session) {
                window.location = "<%= root_url %>";
            }
        };
    };
</script>
